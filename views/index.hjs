<script type = "text/javascript">
  function loadRegioneDatas(regione){
    callRegione(RegioniCallObj, displayRegione, regione);
    document.cookie = "regione=" + regione;
  }

  function loadProvinciaDatas(provincia){
    callProvincia(ProvinciaCallObj, displayProvincia, provincia);
    document.cookie = "provincia=" + provincia;
  }

  callNazione(ajaxcallObj, displayNazione);
  fillRegione(fillRegioneObj, fillSelectRegione);
  fillProvincia(fillProvinciaObj, fillSelectProvincia);
</script>
